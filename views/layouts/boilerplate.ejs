<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            padding-top: 56px; /* Padding for fixed navbar */
        }
        footer {
            padding: 20px 0;
            background-color: #f7f7f7;
            text-align: center;
            position: relative; /* Adjusted from fixed to relative */
            width: 100%;
        }
        .navbar-custom {
            background-color: #004785; /* Initial color when not scrolled */
            transition: box-shadow 0.4s; /* Transition for shadow */
        }
        .navbar-scrolled {
            box-shadow: 0 4px 6px rgba(0,0,0,0.5); /* Shadow effect when scrolled */
        }
        .footer-text {
            color: #666;
        }
        #add-listing {
            position: fixed;
            right: 20px;
            bottom: 20px;
            font-size: 24px;
            background-color: #28a745; /* Green background */
            color: white;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.3s ease-in-out;
        }
        #add-listing:hover {
            transform: rotate(90deg) scale(1.1); /* Rotate and scale effect on hover */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Your Brand</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <%- body %>
    </div>

    <footer>
        <div class="container">
            <p class="footer-text">Â© 2024 Your Brand. All rights reserved.</p>
        </div>
    </footer>

    <a href="/add-listing" id="add-listing" class="shadow-lg">
        <i class="fas fa-plus"></i>
    </a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Add the scroll event listener to window
        window.onscroll = function() {
            var top = window.scrollY;
            var navbar = document.querySelector('.navbar');
            if (top > 10) { // Apply shadow when scrolled
                navbar.classList.add('navbar-scrolled');
            } else {
                navbar.classList.remove('navbar-scrolled');
            }
        };
    </script>
</body>
</html>
